{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 16",
    "include": ["src/**/*.ts", "features/*.ts"],
    "compilerOptions": {
        "lib": [
            "es2021"
        ],
        "module": "commonjs",
        "target": "es2021",
        "strict": true,
        "declaration": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "exclude": [
        "./node_modules"
    ]
}